Create /etc/systemd/system/pulsewatch.service

[Unit]
Description=PulseWatch Monitor
After=network.target

[Service]
ExecStart=/usr/bin/python3 /path/to/pulsewatch.py
Restart=always

[Install]
WantedBy=multi-user.target

sudo systemctl daemon-reload
sudo systemctl enable pulsewatch
sudo systemctl start pulsewatch
